

<% @contact = Contact.find(params[:id]) %>


<div class="page-header"><h1>Upload Photo</h1></div>

<%= form_for @photo do |f| %>
  <%= render 'shared/errors', object: @photo %>

  <div class="form-group">
    <%= f.label :photo %>
    <%= f.text_field :photo %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit 'Upload' %>
<% end %>


<%= @contact.name %><br>

<%= render @photos %>



<%= @contact.address %><br>
<%= @contact.phoneNumber %><br>
<%= @contact.email %><br>
<% if @contact.favorite != true %>
	<form action="/fav" method="POST"><br>
		<button type="submit" value=<%= @contact.id.to_s %> name="id">Make Favorite</button>
		<input type="hidden" name="authenticity_token"
      	value="<%= form_authenticity_token %>">
	</form>
<% else %>
	<span>Favorite!</span><br>
<% end %>

<a href="/">Return to Contacts</a>